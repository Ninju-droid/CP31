#include <bits/stdc++.h>
using namespace std;

const int MOD = 1e9+7;
const int MAXN = 1e6 + 5;
#define ll long long
#define all(x) (x).begin(), (x).end()
#define allr(x) (x).rbegin(), (x).rend()
ll modpow(ll base, ll exp) {
    ll result = 1;
    base %= MOD;
    while (exp > 0) {
        if (exp & 1) result = (result * base) % MOD;
        base = (base * base) % MOD;
        exp >>= 1;
    }
    return result;
}
ll modinv(ll a){
    return modpow(a,MOD-2);
}
vector<ll> fact(MAXN);
void precomputeFact(){
    fact[0] = 1;
    for(int i=1; i<MAXN; i++){
        fact[i] = (fact[i-1]*i) % MOD;
    }
}
ll nCr(int n,int r){
    if(r>n || r<0) return 0;
    ll denom = (fact[r] * fact[n-r]) % MOD;
    return (fact[n]*modinv(denom)) % MOD;
}
    
bool func(ll m,vector<ll>&a,vector<ll>&b,ll n){
    ll cnt = 0 ; 
    for(ll i =1;i<=n;i++){
        if(b[i]>=cnt && a[i]>= m-cnt-1)cnt++;
    } 
    return cnt>=m;
}   

bool vanish(string s, ll i){
    ll len = s.size(); 
    ll j = 0 ; 
    while(i<len){
        if(s[i]<s[j])return false; 
        else if(s[i]==s[j]){
            i++; j++; 
        }
        else return true;
    }
    return true;
}

void add_str(char a ,char b ,char c , ll n,vector<string>&vec){
    string st = "";
    st+=a;
    ll j = 1; 
    while(j<n){
        if(st[j-1]==a)st+=c;
        else if(st[j-1]==c)st+=b;
        else st+=a;
        j++;
    }
    vec.push_back(st); 
}

void fun(){
    ll n,m;cin>>n>>m; 
    string s;cin>>s; 
    vector<string>vec;
    char a = 'a',b='b',c='c';
    add_str(a,b,c,n,vec); 
    add_str(a,c,b,n,vec);
    add_str(b,a,c,n,vec);
    add_str(b,c,a,n,vec);
    add_str(c,a,b,n,vec);
    add_str(c,b,a,n,vec);

    vector<vector<ll>>matrix(6,vector<ll>(n+1,0)); 

    for(ll i=0;i<6;i++){
        ll cnt = 0 ; 
        for(ll j=0;j<n;j++){
            if(s[j]==vec[i][j])cnt++; 
            matrix[i][j+1]=cnt;
        }
    }
    while(m--){
        ll ans = n; 
        ll l,r;cin>>l>>r; 
        for(ll i=0;i<6;i++){
            ll cnt = (r-l+1) - (matrix[i][r]-matrix[i][l-1]);
            ans = min(ans,cnt); 
        }
        cout<<ans<<endl;
    }
}

int main() {
#ifndef ONLINE_JUDGE
    freopen("Input.txt", "r", stdin);
    freopen("Output.txt", "w", stdout);
#endif  
   int t = 1;
   //cin>>t;
   while(t--)fun(); 
   return 0 ; 
}
